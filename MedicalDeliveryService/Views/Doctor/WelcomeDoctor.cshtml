@model IEnumerable<ReceiptViewModel>

@{
    ViewData["Title"] = "ClientDetails";
}

<h1>Welcome, Doctor!</h1>

<nav class="menu-bar">
    <a asp-action="NewReceipt" class="btn btn-primary">New Receipt</a>
    <a asp-action="AllClients" class="btn btn-primary">All Clients</a>

</nav>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentReview)
            </th>
            <th>
                <p>Status</p>
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Receipt.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentReview)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Receipt.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <a asp-action="ReceiptDetails" asp-route-id="@item.Receipt.ID">ReceiptDetails</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
