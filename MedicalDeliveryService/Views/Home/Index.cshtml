@{
    ViewData["Title"] = "Home Page";
}

<style>
    .standout-table {
        background-color: #f5f5f5;
        border-radius: 10px;
        padding: 10px;
    }

        .standout-table th,
        .standout-table td {
            border: none;
            padding: 12px; /* Increased padding */
        }

    .menu-bar {
        background-color: #f5f5f5;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .menu-item {
        display: inline-block;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        margin-right: 10px;
        border-radius: 8px; /* Soft corners */
    }

    .action-button {
        display: inline-block;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        margin-right: 10px;
        border-radius: 8px; /* Soft corners */
    }

        .action-button:hover {
            background-color: #0056b3;
        }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>E-Commerce system to Control economics of medical services</p>
</div>

<div class="menu-bar">
    <div>
        <button class="menu-item" onclick="location.href='@Url.Action("AllClients")'">All Clients</button>
        <button class="menu-item" onclick="location.href='@Url.Action("AllSuppliers")'">All Suppliers</button>
        <button class="menu-item" onclick="location.href='@Url.Action("AllFactories")'">All Factories</button>
        <button class="menu-item" onclick="location.href='@Url.Action("AllProducts")'">All Products</button>
    </div>
    <div>
        <button class="menu-item" onclick="location.href='@Url.Action("CreateNewReceipt")'">+ New Receipt</button>
    </div>
</div>

