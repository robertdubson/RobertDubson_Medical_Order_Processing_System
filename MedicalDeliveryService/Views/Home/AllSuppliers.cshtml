@model IEnumerable<SupplierViewModel>

@{
    ViewData["Title"] = "AllSuppliers";
}

<style>
    .standout-table {
        background-color: #f5f5f5;
        border-radius: 10px;
        padding: 10px;
    }

        .standout-table th,
        .standout-table td {
            border: none;
        }
</style>

<h1>AllSuppliers</h1>

<p>
    <button onclick="window.location.href='@Url.Action("CreateSupplier")'" class="btn btn-primary">Create New</button>
</p>
<table class="table standout-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <button onclick="window.location.href='@Url.Action("EditSupplier", new { id = item.ID })'" class="btn btn-primary">Edit</button> |
                    <button onclick="window.location.href='@Url.Action("DeleteSupplier", new { id = item.ID })'" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
