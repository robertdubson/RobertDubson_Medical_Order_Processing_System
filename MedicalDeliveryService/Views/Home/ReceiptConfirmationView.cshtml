@model MedicalDeliveryService.Models.ReceiptViewModel

<style>
    .page-title {
        color: #333;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .back-link {
        color: #007bff;
    }

    .section {
        margin-bottom: 20px;
    }

    .section-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 10px;
    }

        .product-table th,
        .product-table td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .product-table th {
            background-color: #f8f9fa;
            text-align: left;
            font-weight: bold;
        }
</style>

<h1 class="page-title">Receipt Confirmation</h1>
<p>
    <a asp-action="Index" class="back-link">Back</a>
</p>

<div class="section">
    <h2 class="section-title">Receipt Details</h2>
    <p><strong>Date:</strong> @Model.Receipt.CreationDate</p>
    <p><strong>Appointment Review:</strong> @Model.AppointmentReview</p>
</div>

<div class="section">
    <h2 class="section-title">Prescripted Products</h2>
    <table class="product-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.PrescriptedProducts)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="section">
    <h2 class="section-title">Total Cost</h2>
    <p><strong>Total Cost:</strong> @Model.Cost</p>
</div>

<div class="section">
    <h2 class="section-title">Doctor</h2>
    <p><strong>Doctor Name:</strong> @Model.DoctorName</p>
</div>

<div class="section">
    <h2 class="section-title">Algorithm Logs</h2>
    <p><button onclick="downloadLogs()">Download Logs</button></p>
</div>


<!-- Include the JavaScript code to handle the download -->
<script>
  function downloadLogs() {
    var logs = '@string.Join("\n", Model.AlgorithmLogger.LogList)'.replace(/&#xA;/g, '\n');
    var element = document.createElement('a');
    element.setAttribute('href', 'data:text/plain;charset=utf-16,' + encodeURIComponent(logs));
    element.setAttribute('download', 'algorithm_logs.txt');
    element.style.display = 'none';
    document.body.appendChild(element);
    element.click();
    document.body.removeChild(element);
  }
</script>


