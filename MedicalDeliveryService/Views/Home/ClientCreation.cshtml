@model ClientCreationViewModel

<form method="post" action="CreateClient">
    <div class="form-group">
        <label for="OfficialName">First Name:</label>
        <input type="text" id="OfficialName" name="OfficialName" value="@Model.OfficialName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Number">Phone Number:</label>
        <input type="text" id="Number" name="Number" value="@Model.Phone" pattern="[0-9+]+" title="Please enter numbers and the plus sign (+) only" required class="form-control" />
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" value="@Model.EMail" pattern="[a-zA-Z0-9._%+-]+&#64;[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}" title="Please enter a valid email address in the format username@domain.com" required class="form-control" />
    </div>
    <div class="form-group">
        <label for="InsertedPassword">Password:</label>
        <input type="password" id="InsertedPassword" name="InsertedPassword" value="@Model.InsertedPassword" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="UserName">UserName:</label>
        <input type="text" id="UserName" name="UserName" value="@Model.UserName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="SelectedCityIDStr">Select a value:</label>
        @Html.DropDownListFor(model => model.SelectedCityIDStr, Model.AllCities, "Select an option", new { id = "SelectedCityIDStr", @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <button type="button" onclick="location.href='@Url.Action("AllClients", "Home")'" class="btn btn-secondary">Back to List</button>
</div>
