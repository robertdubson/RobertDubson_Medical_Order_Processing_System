@model IEnumerable<FactoryViewModel>

@{
    ViewData["Title"] = "AllFactories";
}

<style>
    .standout-table {
        background-color: #f5f5f5;
        border-radius: 10px;
        padding: 10px;
    }

        .standout-table th,
        .standout-table td {
            border: none;
        }
</style>

<h1>AllFactories</h1>

<p>
    <button onclick="window.location.href='@Url.Action("CreateFactory")'" class="btn btn-primary">Create New</button>
</p>
<table class="table standout-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                </td>
                <td>
                    <button onclick="window.location.href='@Url.Action("EditFactory", new { id = item.ID })'" class="btn btn-primary">Edit</button> |
                    <button onclick="window.location.href='@Url.Action("FactoryDetails", new { id = item.ID })'" class="btn btn-info">Factory Details</button> |
                    <button onclick="window.location.href='@Url.Action("DeleteFactory", new { id = item.ID })'" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
