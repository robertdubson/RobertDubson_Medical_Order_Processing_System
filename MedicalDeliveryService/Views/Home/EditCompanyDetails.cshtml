@model CompanyDetailsViewModel

@{
    ViewData["Title"] = "Edit Company Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Company Details</h1>

<form method="post" action="@Url.Action("UpdateCompanyDetails", "Home")">
    <input type="hidden" name="CompanyID" value="@Model.CompanyID" />
    <input type="hidden" name="DetailsID" value="@Model.ID" />

    <div class="form-group">
        <label for="city">City:</label>
        <select id="city" name="City" class="form-control" required>
            <option value="">Select City</option>
            @foreach (var cityItem in Model.CityItems)
            {
                <option value="@cityItem.Value" selected="@(cityItem.Value == Model.CityID.ToString())">@cityItem.Text</option>


            }
        </select>
    </div>

    <div class="form-group">
        <label for="workersAvailable">Workers Available:</label>
        <input type="number" id="workersAvailable" name="WorkersAvailable" class="form-control" value="@Model.WorkersAvailable" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Details</button>
</form>
