@model FactoryViewModel

<form method="post" action="@Url.Action("UpdateFactory", "Home")" class="standout-form">
    <div class="form-group">
        <label for="SupplierId">Select Company:</label>
        @Html.DropDownListFor(model => model.CompanyID, Model.SupplierItems, "Select an option", new { id = "SupplierId", @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="CityId">Select City:</label>
        @Html.DropDownListFor(model => model.CityID, Model.CityItems, "Select an option", new { id = "CityId", @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" id="Address" name="Address" value="@Model.Address" class="form-control" />
    </div>
    <input type="hidden" id="FactoryId" name="FactoryId" value="@Model.FactoryId">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-action="AllFactories" class="btn btn-secondary">Back to List</a>
</div>
