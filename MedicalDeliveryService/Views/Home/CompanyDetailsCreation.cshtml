@model CompanyDetailsViewModel

@{
    ViewData["Title"] = "Add Company Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Company Details</h1>

<form method="post" action="@Url.Action("AddCompanyDetails", "Home")">
    <input type="hidden" name="CompanyID" value="@Model.CompanyID" />

    <div class="form-group">
        <label for="city">City:</label>
        <select id="city" name="City" class="form-control" required>
            <option value="">Select City</option>
            @foreach (var cityItem in Model.CityItems)
            {
                <option value="@cityItem.Value">@cityItem.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="workersAvailable">Workers Available:</label>
        <input type="number" id="workersAvailable" name="WorkersAvailable" class="form-control" required />
    </div>    

    <button type="submit" class="btn btn-primary">Add Details</button>
</form>
